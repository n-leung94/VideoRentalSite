
@model VideoRentalService.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Name</li>
    <li>Release Date: @Model.ReleaseDate.Date.ToLongDateString()</li>
    <li> Date Added: @Model.DateAdded.Date.ToLongDateString()</li>
    <li>Number in Stock: @Model.Stock</li>

</ul>
